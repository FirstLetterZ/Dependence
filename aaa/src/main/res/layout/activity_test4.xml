<?xml version="1.0" encoding="utf-8"?>
<com.zpf.views.stretchy.StretchyScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pll_load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:boundaryWidthLeft="50dp"
    app:boundaryWidthRight="40dp">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2196F3"
        android:gravity="center|right"
        android:text="this is left"
        app:intercept_scrolling="true"
        app:slot_location="left" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2196F3"
        android:gravity="center|left"
        android:text="this is right"
        app:intercept_scrolling="true"
        app:slot_location="right" />


</com.zpf.views.stretchy.StretchyScrollLayout>