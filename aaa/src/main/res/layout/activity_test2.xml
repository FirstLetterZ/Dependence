<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/space_location"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="6dp"
        android:background="#999"
        android:clipToPadding="false"
        android:paddingHorizontal="10dp"
        android:paddingTop="14dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="@id/space_location"
        app:layout_constraintEnd_toEndOf="@id/space_location"
        app:layout_constraintStart_toStartOf="@id/space_location"
        app:layout_constraintTop_toTopOf="@id/space_location" />
</androidx.constraintlayout.widget.ConstraintLayout>