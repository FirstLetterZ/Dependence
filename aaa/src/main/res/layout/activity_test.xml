<?xml version="1.0" encoding="utf-8"?>
<com.zpf.views.stretchy.ScrollLoadLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pll_load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:boundaryWidthBottom="60dp"
    app:boundaryWidthTop="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="this is top"
        app:slot_location="top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="this is bottom"
        app:slot_location="bottom" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</com.zpf.views.stretchy.ScrollLoadLayout>